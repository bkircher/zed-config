// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Ayu Dark",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  // Disable automatic updates to avoid interrupting active terminal sessions
  // and updates are somewhat frequent.
  "auto_update": false,
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "languages": {
    "Plain Text": {
      "preferred_line_length": 80,
      "wrap_guides": [80],
      "soft_wrap": "none"
    },
    "Markdown": {
      "preferred_line_length": 80,
      "wrap_guides": [80],
      "soft_wrap": "editor_width"
    },
    "JSON": {
      "prettier": { "allowed": true, "parser": "json" }
    },
    "Git Commit": {
      "preferred_line_length": 72,
      "wrap_guides": [50, 72],
      "soft_wrap": "none"
    },
    "Elixir": {
      "language_servers": ["expert", "!elixir-ls", "!next-ls", "!lexical"],
      "remove_trailing_whitespace_on_save": true
    }
  },
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-5-nano"
    }
  },
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "hunk_style": "unstaged_hollow"
  },
  "terminal": {
    "blinking": "on"
  },
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/.dev.vars",
      "**/secrets.yml",
      "**/*.md"
    ]
  },
  "completions": {
    "words": "enabled",
    "lsp": true,
    "lsp_fetch_timeout_ms": 2
  }
}
