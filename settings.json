// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Neovim default dark",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  // Disable automatic updates to avoid interrupting active terminal sessions
  // and updates are somewhat frequent.
  "auto_update": false,
  "vim_mode": true,
  "buffer_font_family": "Iosevka Nerd Font Mono",
  "buffer_font_size": 15,
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 14,
  "icon_theme": "Catppuccin Mocha",
  "buffer_line_height": { "custom": 1.4 },
  "buffer_font_weight": 300,
  "buffer_font_features": { "calt": true },
  "title_bar": {
    "show_branch_icon": true
  },
  "toolbar": {
    // Depends on the day, I usually have them all disabled
    "breadcrumbs": true,
    "quick_actions": true,
    "agent_review": true
  },
  "project_panel": { "entry_spacing": "standard" },
  "tabs": { "file_icons": false },
  "current_line_highlight": "none",
  "format_on_save": "off",
  "languages": {
    "Plain Text": {
      "preferred_line_length": 80,
      "wrap_guides": [80],
      "soft_wrap": "none"
    },
    "Markdown": {
      "preferred_line_length": 80,
      "wrap_guides": [80],
      "soft_wrap": "editor_width"
    },
    "JSON": {
      "prettier": { "allowed": true, "parser": "json" }
    },
    "YAML": {
      "prettier": { "allowed": true },
      "hard_tabs": false,
      "tab_size": 2
    },
    "Git Commit": {
      "preferred_line_length": 72,
      "wrap_guides": [50, 72],
      "soft_wrap": "none"
    },
    "LaTeX": {
      "hard_tabs": false,
      "tab_size": 4
    },
    "Elixir": {
      "language_servers": ["expert", "!elixir-ls", "!next-ls", "!lexical"]
    },
    "Lua": {
      "tab_size": 2
    }
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "openai",
      "model": "gpt-5-nano"
    }
  },
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "hunk_style": "unstaged_hollow"
  },
  "terminal": {
    "blinking": "on",
    "font_family": "Iosevka Nerd Font Mono",
    "font_size": 15,
    "font_weight": 300
  },
  // Still experimenting. Don't like any of them much.
  // "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "eager",
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/.dev.vars",
      "**/secrets.yml",
      "**/*.md"
    ]
  },
  "completions": {
    "words": "enabled",
    "lsp": true,
    "lsp_fetch_timeout_ms": 2
  }
}
